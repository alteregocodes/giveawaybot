#!/bin/bash

# Install requirements
pip install -r requirements.txt

# Prompt for config values and write to config.py
read -p "Enter your API ID: " api_id
read -p "Enter your API Hash: " api_hash
read -p "Enter your Bot Token: " bot_token
read -p "Enter your Owner ID: " owner_id
read -p "Enter your Admin ID: " admin_id
read -p "Enter your Channel ID 1: " channel_id
read -p "Enter your Channel ID 2: " channel_id2

cat <<EOT > config.py
api_id = '$api_id'
api_hash = '$api_hash'
bot_token = '$bot_token'
owner_id = '$owner_id'
admin_id = '$admin_id'
channel_id = '$channel_id'
channel_id2 = '$channel_id2'
pesan_start = 'Selamat datang di Giveaway Bot!'
pesan_giveaway = 'Giveaway telah dibuka! Gunakan /ikutga {username} untuk ikut serta.'
pesan_join = 'Anda harus bergabung dengan channel berikut sebelum dapat ikut serta: {channel1}, {channel2}'
pesan_menang = 'Selamat {username}, Anda memenangkan giveaway!'
EOT
